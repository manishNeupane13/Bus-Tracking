<WelcomeScreen>
    name:'welcomescreen'
    md_bg_color:app.theme_cls.bg_light
    # spacing:30
    
    BoxLayout:
        orientation:"vertical"
        pos_hint: {"top":1}
        BoxLayout:
            size_hint_y:None
            pos_hint: {"top":1}
            padding:5
            height:self.parent.height/2
            
            FitImage:
                source:'images//logo//new_logo.png'
                pos_hint:{"top":1 }
                radius:36,36,36,36
        BoxLayout:
            orientation: 'vertical'
            padding:25
            spacing:25
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            
            ElementCard: 
                md_bg_color:app.theme_cls.primary_dark
                padding:10
                pos_hint: {'center_x':0.5, 'center_y':0.5 }

                MDFillRoundFlatIconButton:
                    icon: "login-variant"
                    text:'Sigin'
                    md_bg_color:app.theme_cls.primary_dark
                    font_style:"H5"
                    size:self.parent.width,self.parent.height
                    text_color:1,1,1,1
                    pos_hint: {'center_x':0.5, 'center_y':0.5 }
                    on_press:
                        root.manager.current='userlogin'
                        # root.manager.current='userhome'
                        root.manager.transition.direction='left'
            ElementCard:
                md_bg_color:app.theme_cls.primary_dark
                padding:10
                pos_hint: {'center_x':0.5, 'center_y':0.5 }
            
                MDFillRoundFlatIconButton:
                    icon: 'location-enter'
                    text:'Signup'
                    font_style:"H5"
                    md_bg_color:app.theme_cls.primary_dark
                    text_color:1,1,1,1
                    size: self.parent.width,self.parent.height
                    pos_hint: {'center_x':0.5, 'center_y':0.5 }
                    on_press:
                        root.manager.current='userregister'
                        root.manager.transition.direction='left'
        BoxLayout:
            orientation:'horizontal'
            padding:15
            pos_hint: {'bottom':1}
            ElementCard:
            


            
                
            



