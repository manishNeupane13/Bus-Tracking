<Content>
    orientation: 'vertical'
    spacing:5
    size_hint_y: None
    padding:6
    spacing:15
    height:"300dp"
    ElementCard:
        padding:10
        orientation: 'vertical'
        MDLabel:
            id:initiallocation
            font_size:12
            size_hint_x: None
            pos_hint: {'center_x': .5, 'center_y': .5}

        
    ElementCard:
        padding:6

        MDTextField:
            id:finalstop
            pos_hint: {'center_x': .5, 'center_y': .3}
            size_hint_x: None
            hint_text:"Final Destination"
            width: "200dp"
            on_focus: if self.focus: app.menu.open()
   
    ElementCard:
        padding:6

        MDLabel:
            id:user_category
            pos_hint: {'center_x': .5, 'center_y': .6}
            size_hint_x: None
            width: "200dp"
            hint_text: "User Category"
    ElementCard:
        padding:6

        MDLabel:
            id:farecost
            pos_hint: {'center_x': .5, 'center_y': .6}
            size_hint_x: None
            width: "200dp"
    MDTextButton:
        text:"Accept"
        pos_hint: {'center_x': .9, 'center_y': .3}
        on_release:root.payment_access()


      


        