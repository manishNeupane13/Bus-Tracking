<RouteDetails>
    BoxLayout:
        orientation: 'vertical'
        padding:10
        BackNavigationKey:
            left_action_items:[["arrow-left-bold-circle-outline",lambda x:root.callback(),"Back"]]
            title: "Bus Stand View"
            elevation:10
            pos_hint: {"top":1}
        ElementCard:
            padding:20
            BoxLayout:
                pos_hint: {"top":1} 
                orientation: 'horizontal'
                padding:5
                size_hint_max_y:1
                MDTextField:
                    id:mainroute
                    padding:2
                    pos_hint: {'center_x': .5, 'center_y': .95}
                    size_hint_x: None
                    width:root.width-80
                    hint_text: "Route List"
                    on_focus: if self.focus: root.route_menu.open()
                MDIconButton:
                    icon: "alpha-x-circle"
                    pos_hint: {"top":1}
                    pos_hint: {'center_x': .5, 'center_y': .95}
                    on_release: root.remove_widget()
            BoxLayout:
                orientation: 'vertical'
                ScrollView:
                    MDList:
                        id:listitem
                        spacing:20
                        font_size:20
                        halign:'center'